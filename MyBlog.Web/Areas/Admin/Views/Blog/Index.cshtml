@model List<MyBlog.Model.Blog>
<blockquote class="layui-elem-quote">
	文章管理
</blockquote>
<div style="padding:10px;">
	<div>
		<a class="layui-btn" href="/admin/Blog/Add">添加</a>
	</div>
	<table class="layui-table">
		<thead>
			<tr>
				<th>发布时间</th>
				<th>博客标题</th>
				<th>所属分类</th>
				<th>访问量</th>
				<th>管理</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var blog in Model)
			{
				<tr>
					<td>@blog.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
					<td>@blog.Title</td>
					<td>@blog.Name</td>
					<td>@blog.VisitNum</td>
					<td>
						<a href="/admin/Blog/Add/@blog.ID">
							<i class="layui-icon">&#xe642;</i>
							编辑
						</a>
						<a href="/admin/Blog/Delete/@blog.ID" onclick="return confirm('是否确认删除?')">
							<i class="layui-icon">&#xe693;</i>
							删除
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>