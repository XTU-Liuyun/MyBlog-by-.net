@*model List<MyBlog.Model.Blog>*@
<blockquote class="layui-elem-quote">
	分类管理
</blockquote>
<div style="padding:10px;">
	<table class="layui-table">
		<tr>
			<td style="width:200px;vertical-align:top;">
				<ul id="tree1"></ul>
			</td>
			<td>
				<fieldset class="layui-elem-field layui-field-title">
					<legend>添加</legend>
					<div class="layui-form">
						<div class="layui-form-item">
							<label class="layui-form-label">上级</label>
							<div class="layui-input-inline" style="height:38px;line-height:38px;">
								节点A
								<button type="button" class="layui-btn layui-btn-xs">设为顶级分类</button>
							</div> 
						</div>
						<div class="layui-form-item">
							<label class="layui-form-label">名称</label>
							<div class="layui-input-inline">
								<input type="text" class="layui-input"/>
							</div>
						</div>
						<div class="layui-form-item">
							<label class="layui-form-label">&nbsp;</label> 
							<div class="layui-input-inline">
								<button type="button" class="layui-btn layui-btn-sm"><i class="layui-icon">&#xe654;</i>添加</button>
							</div>
						</div>
					</div>
				</fieldset>
				<fieldset class="layui-elem-field layui-field-title">
					<legend>编辑</legend>
					<div class="layui-form">
						<div class="layui-form-item">
							<label class="layui-form-label">上级</label>
							<div class="layui-input-inline" style="height:38px;line-height:38px;">
								<select>
									<option value="aaa">结点A</option>
									<option value="aaa">结点B</option>
								</select>
							</div>
						</div>
						<div class="layui-form-item">
							<label class="layui-form-label">名称</label>
							<div class="layui-input-inline">
								<input type="text" class="layui-input" />
							</div>
						</div>
						<div class="layui-form-item">
							<label class="layui-form-label">&nbsp;</label>
							<div class="layui-input-inline">
								<button type="button" class="layui-btn layui-btn-sm"><i class="layui-icon">&#xe642;</i>编辑</button>
							</div>
						</div>
					</div>
				</fieldset>
				<fieldset class="layui-elem-field layui-field-title">
					<legend>删除</legend>
					<div class="layui-form">
						<div class="layui-form-item">
							<label class="layui-form-label">所选分类</label>
							<div class="layui-input-inline" style="height:38px;line-height:38px;">
									结点A
							</div>
						</div>
					
						<div class="layui-form-item">
							<label class="layui-form-label">&nbsp;</label>
							<div class="layui-input-inline">
								<button type="button" class="layui-btn layui-btn-sm layui-btn-danger"><i class="layui-icon">&#xe640;</i>删除</button>
							</div>
						</div>
					</div>
				</fieldset>
			</td>
		</tr>
	</table>
</div>
<script>
	layui.use(function () 
	{
		var tree = layui.tree;
		// 模拟数据
		var data=@Html.Raw(ViewBag.nodejson);
		
		// 渲染
		// 渲染
		tree.render({
			elem: '#tree1',
			data: data,
			showLine: false
		});
	});
	
</script>
